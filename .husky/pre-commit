#!/bin/sh
# pre-commit hook - Runs lint-staged for code quality checks
# Executes ESLint, Prettier, and other checks on staged files

echo "🔍 Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Check if lint-staged succeeded
if [ $? -ne 0 ]; then
  echo ""
  echo "❌ Pre-commit check failed. Please fix the issues above."
  echo "💡 Some issues may be auto-fixable with 'npm run lint:fix'"
  exit 1
fi

echo "✅ Pre-commit checks passed!"
exit 0