        ...prev,
        [name]: error,
      }));
    }

    // ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ç¢ºèªãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã®å†æ¤œè¨¼
    if (name === 'password' && formData.confirmPassword) {
      const confirmError = validateField('confirmPassword', formData.confirmPassword);
      setFormErrors(prev => ({
        ...prev,
        confirmPassword: confirmError,
