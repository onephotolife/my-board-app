    }));

    // ãƒªã‚¢ãƒ«ã‚¿ã‚¤ãƒ ãƒãƒªãƒ‡ãƒ¼ã‚·ãƒ§ãƒ³
    if (focusedField === name) {
      const error = validateField(name as keyof FormData, value);
